set $mod Mod1

# custom
exec_always "~/.config/i3/startup"
new_window pixel 2
focus_follows_mouse no
font pango:monospace 8
font pango:DejaVu Sans Mono 8

# workspaces
bindsym $mod+1 workspace 1; mode "default"
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5

# media
bindsym XF86AudioRaiseVolume exec "pamixer -i 4"
bindsym XF86AudioLowerVolume exec "pamixer -d 4"
bindsym XF86AudioMute exec "pamixer -t"
bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioPrev exec "mpc prev"

# global
bindsym $mod+Return exec "dmenu_run -fn fixed:style=regular:pixelsize=13"
bindsym $mod+Escape mode "unlocked"

mode "unlocked" {

	bindsym $mod+Escape mode "default"
	bindsym $mod+Shift+r restart
	
	# general
	bindsym $mod+Return exec "dmenu_run -fn fixed:style=regular:pixelsize=13"
	bindsym $mod+e exec urxvt
	bindsym $mod+f fullscreen toggle
	bindsym $mod+q kill

	# focus
	bindsym $mod+w focus up
	bindsym $mod+a focus left
	bindsym $mod+s focus down
	bindsym $mod+d focus right

	# move
	bindsym $mod+Control+w move up
	bindsym $mod+Control+a move left
	bindsym $mod+Control+s move down
	bindsym $mod+Control+d move right

	# resize
	bindsym $mod+Shift+h resize shrink width 10 px or 10 ppt
	bindsym $mod+Shift+j resize grow height 10 px or 10 ppt
	bindsym $mod+Shift+k resize shrink height 10 px or 10 ppt
	bindsym $mod+Shift+l resize grow width 10 px or 10 ppt

	# split
	bindsym $mod+h split h
	bindsym $mod+v split v

	# workspaces
	bindsym $mod+1 workspace 1; mode "default"
	bindsym $mod+2 workspace 2
	bindsym $mod+3 workspace 3
	bindsym $mod+4 workspace 4
	bindsym $mod+5 workspace 5
	bindsym $mod+Shift+1 move container to workspace 1
	bindsym $mod+Shift+2 move container to workspace 2
	bindsym $mod+Shift+3 move container to workspace 3
	bindsym $mod+Shift+4 move container to workspace 4
	bindsym $mod+Shift+5 move container to workspace 5

	# media
	bindsym XF86AudioRaiseVolume exec "pamixer -i 4"
	bindsym XF86AudioLowerVolume exec "pamixer -d 4"
	bindsym XF86AudioMute exec "pamixer -t"
	bindsym XF86AudioPlay exec "mpc toggle"
	bindsym XF86AudioNext exec "mpc next"
	bindsym XF86AudioPrev exec "mpc prev"

}
